<%- include('../includes/head.ejs') %>

<body class="color-theme-pink framework7-root">
  <div class="page">
    <!-- <div class="navbar">
      <div class="navbar-bg"></div>
      <div class="navbar-inner sliding"></div>
         -->
          <%- include('../includes/logo.ejs') %>
        
      <!-- </div>
    </div> -->
    <div class="page-content" style="padding-top: 5px !important">
      <div class="block">
        <h2 style="margin: 0px 0 0;"><%= categoryNameView %> hírek</h2>
        <ul class="list media-list post-list" style="margin: 0px 0;">
          <% for (let i=0; i < articles.length; i++ ) { %>
           
        <li>
          <a href="/stiri/<%= articles[i].Category.seoUrl %>/<%= articles[i].Source.seoUrl%>/<%= articles[i].seoUrl %>">
            <div class="item-content">
              <div class="item-media"><img src="<%= articles[i].imageUrl %>" alt=""></div>
              <div class="item-inner">
                <div class="item-subtitle"><%= articles[i].Source.name %></div>
                <div class="item-title"><%= articles[i].title %></div>
                <div class="item-subtitle bottom-subtitle"><i class="f7-icons">clock</i></i>2 hours ago</div>
              </div>
            </div>
          </a>
        </li>
       
        <% } %>
      </ul>
      </div>
    </div>
    <div class="toolbar tabbar tabbar-labels toolbar-bottom">
      <div class="toolbar-inner">
        <a href="/stiri" class="tab-link">
          <i class="f7-icons">today</i>
          <span class="tabbar-label">Főoldal</span>
        </a>
        <a href="#view-categories" class="tab-link tab-link-active">
          <i class="f7-icons">square_grid_2x2_fill</i>
          <span class="tabbar-label">Kategóriák</span>
        </a>
        <a href="#view-discover" class="tab-link">
          <i class="f7-icons">star_fill</i>
          <span class="tabbar-label">Discover</span>
        </a>
        <a href="#view-search" class="tab-link">
          <i class="f7-icons">search</i>
          <span class="tabbar-label">Search</span>
        </a>
        <a href="#view-pages" class="tab-link">
          <i class="f7-icons">square_stack_fill</i>
          <span class="tabbar-label">Pages</span>
        </a>
      </div>
    </div>
    
  </div>
  
</body>
<%- include('../includes/end.ejs') %>
