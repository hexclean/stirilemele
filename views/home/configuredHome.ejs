<%- include('../includes/head.ejs') %>

<body id="page-top">
  <%- include('../includes/navbar.ejs') %>
  <div id="wrapper">
    <!-- Sidebar -->
    <ul class="sidebar navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/">
          <i class="fas fa-fw fa-home"></i>
          <span><%= lingua.hirek %></span>
        </a>
      </li>
      <% if(logged == 1){ %>
      <li class="nav-item active">
        <a class="nav-link" href="#">
          <i class="fas fa-fw fa-cogs"></i>
          <span><%= lingua.kedvelt_hirek %></span>
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="/profile/history">
          <i class="fas fa-fw fa-history"></i>
          <span><%= lingua.elozmenyek %></span>
        </a>
      </li>
      <% } %>

      <li class="nav-item">
        <a class="nav-link" href="/channels">
          <i class="fas fa-fw fa-users"></i>
          <span><%= lingua.hirportalok %></span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/categorii">
          <i class="fas fa-fw fa-list-alt"></i>
          <span><%= lingua.kategoriak %></span>
        </a>
      </li>
      <% if(logged == 1){ %>
      <li class="nav-item">
        <a class="nav-link" href="/help">
          <i class="fas fa-fw fa-info"></i>
          <span><%= lingua.oldal_testreszabasa %></span>
        </a>
      </li>
      <% } %> <% if(logged == 0){ %>
      <li class="nav-item">
        <a class="nav-link" href="/important">
          <i class="fas fa-fw fa-info"></i>
          <span><%= lingua.regisztracio_elonyei %></span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/autentificare/login">
          <i class="fas fa-fw fa-user-alt"></i>
          <span><%= lingua.belepes %></span>
        </a>
      </li>
      <% } %>
    </ul>

    <div id="content-wrapper">
      <div class="container-fluid">
        <div class="video-block section-padding">
          <div class="row">
            <%- include('../shared/bestArticles.ejs') %>

            <div class="col-md-12">
              <div class="main-title">
                <h6><%= lingua.kedvelt_hirek %></h6>
                <% if ( articles.length < 1 ) { %>
                <p>
                  <%= lingua.modositsd_a_kategoriakat_vagy_a_hirportalokat %>
                </p>
                <% } %>
              </div>
            </div>

            <% for (let i=0; i < articles.length; i++ ) { %>
            <div class="col-xl-3 col-sm-6 mb-3">
              <div class="video-card history-video">
                <div class="video-card-image">
                  <a
                    class="play-icon"
                    href="/stiri/<%= articles[i].Category.seoUrl %>/<%= articles[i].Source.seoUrl %>/<%= articles[i].seoUrl %>"
                  ></a>
                  <a
                    href="/stiri/<%= articles[i].Category.seoUrl %>/<%= articles[i].Source.seoUrl %>/<%= articles[i].seoUrl %>"
                    ><img
                      class="img-fluid"
                      src="<%= articles[i].imageUrl %>"
                      alt=""
                      style="
                        max-height: 150px !important;
                        min-height: 150px !important;
                      "
                  /></a>
                </div>

                <div class="video-card-body">
                  <div class="video-title">
                    <a
                      href="/stiri/<%= articles[i].Category.seoUrl %>/<%= articles[i].Source.seoUrl %>/<%= articles[i].seoUrl %>"
                    >
                      <% if( articles[i].title.length > 160){ %> <%=
                      articles[i].title.substring(0, 160) + "..." %> <% } else{
                      %> <%= articles[i].title %> <% } %></a
                    >
                  </div>
                  <div class="video-item-user">
                    <div class="d-flex align-items-center">
                      <div class="dropdown-list-image mr-3">
                        <img
                          class="rounded-circle"
                          src="/<%= articles[i].Source.imageUrl %>"
                          alt=""
                        />
                      </div>
                      <div class="font-weight-bold mr-2">
                        <div class="text-truncate">
                          <%= articles[i].Source.name %>
                        </div>
                        <div class="small text-gray-500">
                          <%= articles[i].Category.CategoryTranslations[0].name
                          %> - 45 perce
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </div>
          <% if ( articles.length > 1 ) { %> <%-
          include('../shared/pagination.ejs') %> <% } %>
          <div class="top-category section-padding mb-0">
            <div class="row">
              <div class="col-md-12">
                <div class="main-title mb-4">
                  <h6><%= lingua.hirportalok %></h6>
                </div>
              </div>
              <div class="col-md-12">
                <div class="owl-carousel owl-carousel-category">
                  <% for (let i=0; i < sources.length; i++ ) { %>
                  <div class="item">
                    <div
                      class="text-center bg-white shadow-sm p-4 rounded channel-item"
                    >
                      <a href="#">
                        <div class="channel-item-image mb-3">
                          <img
                            class="rounded-circle"
                            src="/<%= sources[i].imageUrl %>"
                            alt=""
                          />
                        </div>

                        <div class="channel-item-body">
                          <p class="mb-1">
                            <%= sources[i].name %>
                            <i
                              data-toggle="tooltip"
                              data-placement="top"
                              title=""
                              class="fa fa-check-circle text-success"
                              data-original-title="Verified"
                            ></i>
                          </p>
                        </div>
                      </a>
                    </div>
                  </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
      <!-- Sticky Footer -->
    </div>
    <!-- /.content-wrapper -->
  </div>
  <!-- /#wrapper -->
  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>
  <!-- Logout Modal-->
  <%- include('../shared/logout.ejs') %>
  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
  <!-- Owl Carousel -->
  <script src="/vendor/owl-carousel/owl.carousel.js"></script>
  <!-- Custom scripts for all pages-->
  <script src="/js/custom.js"></script>
</body>
