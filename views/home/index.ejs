                     </script>
                     <% } %>
                 
                  </div>
             <% } else{ %>  
               <div class="menus">
                  <% for (let i=0; i < categories.length; i++ ) { %>
                     <input type="hidden" id="categoryId<%= categories[i].id %>" value="<%= categories[i].id %>" name="categoryId" />
                     <a id="change<%= categories[i].id %>" class="lists active"><%= categories[i].CategoryTranslations[0].name %></a>
                     <script type="text/javascript">
                        $(document).ready(function () {
                           $('#change<%= categories[i].id %>').on('click', function () {
                              var categoryId = $("#categoryId<%= categories[i].id %>").val();
                              console.log(categoryId)
                              
                            });
                           
                         
                        });
                        
                              
                     </script>
                     <% } %>
                 
                  </div>
            <% } %>
         
       
		  </div>
         <div class="content-area">
            <% if(logged==1){ %>
               <% for (let i=0; i < articles.length; i++ ) { %>
                  <% for (let k=0; k < articles[i].Source.Articles.length; k++ ) { %>
                    
                     <script>
                       $(function(){
              $('.articleView<%= articles[i].Source.Articles[k].id %>').click(function(){
              let articleId = $("#articleId<%= articles[i].Source.Articles[k].id %>").val();
              
               $.ajax({
                         url: "http://localhost:3000/article-view",
                         type: "POST",
                         data: {
                           articleId: articleId
                         },   
                       });     
             })
                    
                     
                     
                   });
                   </script>
                  <div class="card-blog-post articleView<%= articles[i].Source.Articles[k].id %>">
                     <input hidden id="articleId<%= articles[i].Source.Articles[k].id %>" name="articleId" value="<%= articles[i].Source.Articles[k].id %>"/>
                     <figure class="post-thumbnail card_media">
                        <a href="/stiri/<%= articles[i].Source.Articles[k].title %>"><img src="<%= articles[i].Source.Articles[k].imageUrl %>"></a>
                     </figure>
                     <div class="detail-info">
                        <h1 class="card_title"><a><%= articles[i].Source.Articles[k].title %></a></h1>
                        <span class="authors">Hírportál - <%= articles[i].Source.name %></span>
                        <ul>
                           <% if( articles[i].Source.Articles[k].action == 1){ %>
                              <li><a href=""><span>&#8228;</span> Van itt valami </a></li>
                              <%}%>
                           <li><a href=""><span>&#8228;</span> 3 days ago </a></li>
                        </ul>
                     </div>
                  </div>
                  <% } %>
                  <% } %>
             <% } else{ %>  
               <% for (let i=0; i < articles.length; i++ ) { %>
                  <div class="card-blog-post ">
                     <figure class="post-thumbnail card_media">
                        <a href=""><img src="<%= articles[i].imageUrl %>"></a>
                     </figure>
                     <div class="detail-info">
                        <h1 class="card_title"><a><%= articles[i].title %></a></h1>
                        <span class="authors">David</span>
                        <ul>
                           <li><a href=""><span>&#8228;</span> 3 days ago </a></li>
                        </ul>
                     </div>
                  </div>
                  <% } %>
            <% } %>
          
           
         </div>
