                     <input type="hidden" id="categoryId<%= categories[i].categoryId %>" value="<%= categories[i].categoryId %>" name="categoryId" />
                     <a id="change<%= categories[i].categoryId %>" class="lists active"><%= categories[i].Category.CategoryTranslations[0].name %></a>
                     <script type="text/javascript">
                        $(document).ready(function () {
                           $('#change<%= categories[i].id %>').on('click', function () {
                              var categoryId = $("#categoryId<%= categories[i].categoryId %>").val();
