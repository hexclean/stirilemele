     <div id="content-wrapper">
        <div class="container-fluid">
           <div class="video-block section-padding">
              <div class="row">
                 <div class="col-md-12">
                    <div class="main-title">
                       
                       <h6>Kategóriák</h6>
                    </div>
                 </div>
                 <% for (let i=0; i < allCategories.length; i++ ) { %>
                 <div class="col-xl-3 col-sm-6 mb-3">
                    <div class="category-item mt-0 mb-0">
                       <a href="/stiri/<%= allCategories[i].seoUrl %>">
                         
                          <h6><%= allCategories[i].CategoryTranslations[0].name %><span title="" data-placement="top" data-toggle="tooltip" data-original-title="Verified"></span></h6>
                        
                       </a>
                    </div>
                 </div>
                 <% } %>
              </div>
          
           </div>
        </div>
        <!-- /.container-fluid -->
        <!-- Sticky Footer -->
        <%- include('../includes/footer.ejs') %>
     </div>
