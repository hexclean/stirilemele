<%- include('../includes/head.ejs') %>

<body class="color-theme-pink framework7-root">
  <div class="page">
   
          <%- include('../includes/logo.ejs') %>

    <div class="page-content" style="padding-top: 5px !important; padding-bottom: 95px !important;">
      <div class="block search-container">
        <div class="searchbar-hide-on-search">
          <% if(logged == 1){ %>
          <h2 style="margin-top: 0px;">Kedvelt kategóriáid</h2>
         
          <ul class="popular-tags">
           
            <% for (let i=0; i < categories.length; i++ ) { %>
            <li>
              <a href="/stiri/<%= categories[i].Category.seoUrl %>" class="link"
                ><span><%= categories[i].Category.CategoryTranslations[0].name %></span><i class="f7-icons">chevron_right</i></a>
              </li>
              <% } %><% } %>
               
          </ul>
       
        
        </div>
        <div class="searchbar-hide-on-search">
         
          <h2 style="margin-top: 20px;">Összes kategória</h2>
          <ul class="popular-tags">
            <% for (let i=0; i < allCategories.length; i++ ) { %>
            <li>
              <a href="/stiri/<%= allCategories[i].seoUrl %>" class="link"
                ><span><%= allCategories[i].CategoryTranslations[0].name %></span><i class="f7-icons">chevron_right</i></a>
              </li>
              <% } %>
          </ul>
         
          <h2 style="margin: 25px 0px 15px;">Legtöbbet olvasott cikkek</h2>  
        
        </div>
        
       
      </div>
      
      <div class="block">
        
      
        <ul class="list media-list post-list">
         
                <% for (let i=0; i < articles.length; i++ ) { %>
                  <li>
                    <a href="/stiri/<%= articles[i].Category.seoUrl %>/<%= articles[i].Source.seoUrl %>/<%= articles[i].seoUrl %>"><img src="">
                      <div class="item-content">
                        <div class="item-media"><img src="<%= articles[i].imageUrl %>" alt=""></div>
                        <div class="item-inner">
                          <div class="item-subtitle"><%= articles[i].Source.name %> - <%= articles[i].Category.CategoryTranslations[0].name %></div>
                          <div class="item-title"><%= articles[i].title %></div>
                          <div class="item-subtitle bottom-subtitle"><i class="f7-icons">clock</i></i>20 min ago</div>
                        </div>
                      </div>
                    </a>
                  </li>
         <% } %>
          
        
        </ul>
      </div>
    </div>

    <%- include('../includes/bannerForRegister.ejs') %>
    <div class="toolbar tabbar tabbar-labels toolbar-bottom">
      <div class="toolbar-inner">
        <a href="/" class="tab-link">
          <i class="f7-icons">list_bullet</i>
          <span class="tabbar-label">Hírek</span>
        </a>
        <a href="#" class="tab-link tab-link-active">
          <i class="f7-icons">square_grid_2x2_fill</i>
          <span class="tabbar-label">Kategóriák</span>
        </a>
        <a href="/channels" class="tab-link">
          <i class="f7-icons">person_2_alt</i>
          <span class="tabbar-label">Hírcsatornák</span>
        </a>
        <a href="/top-stiri" class="tab-link">
          <i class="f7-icons">text_badge_star</i>
          <span class="tabbar-label">Top hírek</span>
        </a>
        <% if(logged == 1){ %>
        <a href="/profile" class="tab-link">
          <i class="f7-icons">person_crop_circle</i>
          <span class="tabbar-label">Profil</span>
        </a>
        <% } else{ %>
          <a href="/autentificare/login" class="tab-link">
            <i class="f7-icons">person_crop_circle</i>
            <span class="tabbar-label">Bejelentkezés</span>
          </a>
          <% } %>
      </div>
    </div>

    
  </div>
  
</body>
<%- include('../includes/end.ejs') %>
